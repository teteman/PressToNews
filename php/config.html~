        <script language="javascript">
            function subir() {
                if (document.documentElement.scrollTop < 10) {
                    window.scrollTo(0, 0);
                } else {
                    window.scrollBy(0, -10);
                    setTimeout("subir()", 10);
                }
            }
        </script>
